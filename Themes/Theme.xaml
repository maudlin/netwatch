<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">
  <!-- Color tokens -->
  <Color x:Key="BackgroundDarkColor">#0B0B0C</Color>
  <Color x:Key="CardDarkColor">#1E1E1F</Color>
  <Color x:Key="TextPrimaryColor">#F7F7F8</Color>
  <Color x:Key="TextMutedColor">#AAAAAA</Color>
  <Color x:Key="TextSubtleColor">#888888</Color>
  <Color x:Key="GreenColor">#2BB673</Color>
  <Color x:Key="AmberColor">#FFB020</Color>
  <Color x:Key="RedColor">#E5484D</Color>
  <Color x:Key="BlueColor">#2563EB</Color>
  <Color x:Key="GrayColor">#6B7280</Color>
  <Color x:Key="DividerColor">#22000000</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="BackgroundDark" Color="{StaticResource BackgroundDarkColor}"/>
  
  <!-- Shared dimensions -->
  <System:Double x:Key="PillWidth">88</System:Double>
  <SolidColorBrush x:Key="CardDark" Color="{StaticResource CardDarkColor}"/>
  <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#222224" Offset="0"/>
    <GradientStop Color="#1E1E1F" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="TextMuted" Color="{StaticResource TextMutedColor}"/>
  <SolidColorBrush x:Key="TextSubtle" Color="{StaticResource TextSubtleColor}"/>
  <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"/>
  <SolidColorBrush x:Key="AmberBrush" Color="{StaticResource AmberColor}"/>
  <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}"/>
  <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource BlueColor}"/>
  <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource GrayColor}"/>
  <SolidColorBrush x:Key="Divider" Color="{StaticResource DividerColor}"/>
  <!-- Chart gridline brush (subtle light on dark) -->
  <SolidColorBrush x:Key="GridlineBrush" Color="#22FFFFFF"/>

  <!-- Spacing as thickness -->
  <Thickness x:Key="Space4">4</Thickness>
  <Thickness x:Key="Space8">8</Thickness>
  <Thickness x:Key="Space12">12</Thickness>
  <Thickness x:Key="Space16">16</Thickness>

  <!-- Typography -->
  <FontFamily x:Key="UiFont">Segoe UI Variable</FontFamily>

  <!-- Common styles -->
  <Style x:Key="Card" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Divider}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="14"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="Black" BlurRadius="24" ShadowDepth="8" Opacity="0.08"/>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="Tile" TargetType="Border" BasedOn="{StaticResource Card}">
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="6"/>
  </Style>

  <Style x:Key="StatusPill" TargetType="Border">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Padding" Value="8,1"/>
    <Setter Property="Width" Value="{StaticResource PillWidth}"/>
    <Setter Property="Background" Value="Gray"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="#66000000" BlurRadius="12" ShadowDepth="0" Opacity="0.25"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Pill text: consistent font and weight -->
  <Style x:Key="PillText" TargetType="TextBlock">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style x:Key="MutedLabel" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
  </Style>

  <Style x:Key="BigNumberText" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="FontSize" Value="30"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
  </Style>

  <!-- Mini variant for tighter vertical fit -->
  <Style x:Key="BigNumberTextMini" TargetType="TextBlock" BasedOn="{StaticResource BigNumberText}">
    <Setter Property="FontSize" Value="22"/>
  </Style>

  <Style x:Key="SubtleText" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextSubtle}"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
  </Style>

  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="Padding" Value="10,4"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="Background" Value="#222"/>
    <Setter Property="BorderBrush" Value="{StaticResource Divider}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,3"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Background" Value="#2A2A2A"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="Width" Value="28"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="Padding" Value="0"/>
  </Style>

  <!-- Mini readiness tile: tighter spacing -->
  <Style x:Key="MiniTile" TargetType="Border" BasedOn="{StaticResource Card}">
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

</ResourceDictionary>

